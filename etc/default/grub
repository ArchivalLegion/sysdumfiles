# Load saved entry
GRUB_TIMEOUT_STYLE="menu"
GRUB_DEFAULT="saved"
GRUB_SAVEDEFAULT="true"
GRUB_TIMEOUT="6"
GRUB_RECORDFAIL_TIMEOUT="6"
GRUB_FORCE_HIDDEN_MENU="false"

# Video mode
GRUB_GFXMODE="auto"
GRUB_GFXPAYLOAD_LINUX="keep"

# Enable encrypted /boot on LUKS
GRUB_ENABLE_CRYPTODISK="true"

# Distro info & Kernel CLI
GRUB_DISTRIBUTOR=`lsb_release -i -s 2> /dev/null || echo DistroCheckFailed`
GRUB_CMDLINE_LINUX="quiet splash loglevel=1 nowatchdog threadirqs noibrs noibpb nopti nospectre_v2 nospectre_v1 l1tf=off nospec_store_bypass_disable no_stf_barrier mds=off tsx=on tsx_async_abort=off mitigations=off"
GRUB_CMDLINE_LINUX_DEFAULT="rd.auto=1 sysrq_always_enabled=1 init_on_alloc=0 zfs.zfs_arc_min=268435456 zfs.zfs_arc_max=536870912"

