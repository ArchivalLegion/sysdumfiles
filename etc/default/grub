# Load last selected entry.
GRUB_DEFAULT=saved
GRUB_SAVEDEFAULT=true
# Timer before selecting entry.
GRUB_TIMEOUT=4
GRUB_TIMEOUT_STYLE=menu

# Kernel CLI.
GRUB_CMDLINE_LINUX="quiet loglevel=1 nowatchdog threadirqs noibrs noibpb nopti nospectre_v2 nospectre_v1 l1tf=off nospec_store_bypass_disable no_stf_barrier mds=off tsx=on tsx_async_abort=off mitigations=off"
GRUB_CMDLINE_LINUX_DEFAULT="rd.auto=1"

# Desired menu colors, used by normal and wallpaper
# modes only. Entries specified as foreground/background.
GRUB_COLOR_NORMAL="light-magenta/black"
GRUB_COLOR_HIGHLIGHT="light-green/black"

# Disable recovery entries.
GRUB_DISABLE_RECOVERY=true

# Enable encrypted /boot on Luks1.
GRUB_ENABLE_CRYPTODISK=y
